{{~#if href~}}
  <a href={{href-to href}}>
    <img src={{cast.pictures.medium}} width="100" height="100" alt={{cast.name}}>
  </a>
{{~else~}}
  <img src={{cast.pictures.medium}} width="100" height="100" alt="">
{{~/if~}}
