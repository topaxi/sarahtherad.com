      <svg viewBox="0 0 36 36">
        <path d="M12 26l6.5-4v-8L12 10zm6.5-4l6.5-4-6.5-4z"/>
      </svg>
    </button>
    {{~#if href~}}
      <a href={{href-to href}}>
        <div class="title">
          <strong>{{cast.name}}</strong><br>
          by Der Dienstag Morgen
        </div>
      </a>
    {{~else~}}
      <div class="title">
        <strong>{{cast.name}}</strong><br>
        by Der Dienstag Morgen
